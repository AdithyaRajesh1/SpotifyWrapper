<+>/* Reset some default browser styles */\r\n* {\r\n    margin: 0;\r\n    padding: 0;\r\n    box-sizing: border-box;\r\n}\r\n\r\n/* Light Theme */\r\nbody {\r\n    font-family: Arial, sans-serif;\r\n    line-height: 1.6;\r\n    background-color: #f4f4f4; /* Light background */\r\n    color: #333; /* Dark text */\r\n}\r\n\r\n/* Navigation Bar */\r\nnav {\r\n    background-color: #333; /* Dark background */\r\n    color: #fff;\r\n    padding: 1em;\r\n}\r\n\r\n/* Dark Theme */\r\nbody.dark-theme {\r\n    background-color: #121212; /* Dark background */\r\n    color: #fff; /* Light text */\r\n}\r\n\r\nnav.dark-theme {\r\n    background-color: #222; /* Dark navigation bar */\r\n}\r\n\r\n/* Blue Theme */\r\nbody.blue-theme {\r\n    background-color: #add8e6; /* Light blue background */\r\n    color: #333; /* Dark text */\r\n}\r\n\r\nnav.blue-theme {\r\n    background-color: #4682b4; /* Blue navigation bar */\r\n}\r\n\r\n/* Main Content Area */\r\n.content {\r\n    max-width: 800px;\r\n    margin: 2em auto;\r\n    padding: 1em;\r\n    background-color: #fff; /* Light background */\r\n    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);\r\n    border-radius: 8px;\r\n}\r\n\r\nbody.dark-theme .content {\r\n    background-color: #333; /* Dark content area */\r\n    box-shadow: 0px 4px 8px rgba(255, 255, 255, 0.1); /* Light shadow for dark theme */\r\n}\r\n\r\nbody.blue-theme .content {\r\n    background-color: #87cefa; /* Light blue content area */\r\n    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Light shadow for blue theme */\r\n}\r\n\r\n/* Headers */\r\nh1 {\r\n    text-align: center;\r\n    color: #333;\r\n    margin-bottom: 1em;\r\n}\r\n\r\nbody.dark-theme h1,\r\nbody.blue-theme h1 {\r\n    color: #fff; /* Light text for dark and blue theme */\r\n}\r\n\r\n/* Share Section */\r\n.share-section {\r\n    margin: 2rem 0;\r\n    padding: 1.5rem;\r\n    background: #f8f9fa; /* Light background by default */\r\n    border-radius: 8px;\r\n    color: #333; /* Dark text by default 