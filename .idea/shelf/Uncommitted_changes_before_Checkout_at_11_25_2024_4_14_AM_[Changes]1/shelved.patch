ter;\r\n    background-color: #fafafa; /* Light background */\r\n}\r\n\r\nbody.dark-theme ul li {\r\n    background-color: #444; /* Dark list item background */\r\n    border-color: #666; /* Lighter border in dark theme */\r\n}\r\n\r\nbody.blue-theme ul li {\r\n    background-color: #b0e0e6; /* Light blue list item background */\r\n    border-color: #4682b4; /* Blue border in blue theme */\r\n}\r\n\r\nul li img {\r\n    border-radius: 5px;\r\n    margin-right: 15px;\r\n}\r\n\r\nul li strong {\r\n    font-size: 1.1em;\r\n}\r\n\r\nul li a {\r\n    color: #1db954;\r\n    text-decoration: none;\r\n    font-weight: bold;\r\n    transition: color 0.3s ease;\r\n}\r\n\r\nbody.dark-theme ul li a,\r\nbody.blue-theme ul li a {\r\n    color: #1db954; /* Green link color in both themes */\r\n}\r\n\r\nul li a:hover {\r\n    color: #14833b;\r\n}\r\n\r\nbody.dark-theme ul li a:hover,\r\nbody.blue-theme ul li a:hover {\r\n    color: #99e5a1; /* Lighter hover color for dark and blue themes */\r\n}\r\n\r\n/* Details Section */\r\ndetails {\r\n    margin-bottom: 1em;\r\n    border: 1px solid #ddd;\r\n    padding: 0.5em;\r\n    border-radius: 5px;\r\n    background-color: #f9f9f9; /* Light background */\r\n}\r\n\r\nbody.dark-theme details {\r\n    background-color: #333; /* Dark background for details section */\r\n    border-color: #666; /* Lighter border for dark theme */\r\n}\r\n\r\nbody.blue-theme details {\r\n    background-color: #b0e0e6; /* Light blue background for details section */\r\n    border-color: #4682b4; /* Blue border for blue theme */\r\n}\r\n\r\nsummary {\r\n    font-size: 1.2em;\r\n    font-weight: bold;\r\n    cursor: pointer;\r\n}\r\n\r\nsummary h2 {\r\n    display: inline;\r\n}\r\n\r\ndetails[open] summary {\r\n    color: #1db954;\r\n}\r\n\r\ndetails ul {\r\n    margin-top: 1em;\r\n}\r\n\r\nbody.dark-theme details[open] summary,\r\nbody.blue-theme details[open] summary {\r\n    color: #99e5a1; /* Lighter summary color for dark and blue themes */\r\n}\r\n
